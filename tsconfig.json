{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "jsx": "react-jsx",
    "types": [
      "@playwright/test",
      "vite/client"
    ]
  },
  "include": [
    "pages/**/*.ts",
    "tests/**/*.ts",
    "utils/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "playwright.config.ts",
    "vite.config.ts"
  ]
}

